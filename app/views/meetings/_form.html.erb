<%= form_with(model: meeting) do |form| %>
  <% if meeting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
        <% meeting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Example, style: "display: block" %>
    <%= form.text_field :Example %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.datetime_field :start_time %>
  </div>

<!--  Used for including the signed in user id when creating a meeting-->
  <div>
    <%= form.number_field :user_id, id: :meetings_user_id, class: "display: block", value: current_user.id,
    type: :hidden %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
