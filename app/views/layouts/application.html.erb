<!-- inside app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>SynopsisApp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
<!--This is using partials to create the navbar across the webpages-->
<%= render partial: "shared/navbar" %>
<!--This is a bootstrap class. It contains the content underneath the navbar to be resized on the screen.
Only to be cleaner-->
<div class="container">
  <%= render 'layouts/alerts' %>
  <%= yield %>
</div>
</body>
</html>
